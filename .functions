#!/bin/bash
# functions

# Calculator
calc() {
  echo "$*" | bc -l;
}

# Weather
meteo() {
  local LOCALE=`echo ${LANG:-en} | cut -c1-2`
  if [ $# -eq 0 ]; then
    local LOCATION=`curl -s ipinfo.io/loc`
  else
    local LOCATION=$1
  fi
  curl -s "$LOCALE.wttr.in/$LOCATION"
}

generate_password() {
  ((test -n "$1" && test "$1" -ge 0) && \
    openssl rand -base64 $1 | colrm $(expr $1 + 1)) 2>&-;
};

alias gp="generate_password"